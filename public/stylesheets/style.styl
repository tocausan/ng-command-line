body,
body *
  font: 14px monospace
  color: white


body
  width: 100%
  height: 100%
  padding: 50px
  background-color: rgba(100,150,250,1)
  color: white
  font-weight: 900
  background: url(https://farm1.staticflickr.com/426/19303788143_16cf4b1b00_k.jpg) 0 0
  background-size: 100%
  background-attachment fixed

  .commandLine
    p,
    p:hover,
    p:focus,
    input,
    input:hover,
    input:focus
      padding: 0 5px
      font-weight: 900
      color: white
      margin: 0
      overflow: visible
      background: none
      border: none
      box-shadow: none
      outline-width: 0



  a
    color: #00B7FF

